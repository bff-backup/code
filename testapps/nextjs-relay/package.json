{
  "private": true,
  "name": "@test/nextjs",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/undergraph-dev/undergraph.git"
  },
  "homepage": "https://undergraph.dev",
  "author": {
    "name": "UnderGraph Maintainers",
    "email": "info@undergraph.dev"
  },
  "bugs": {
    "url": "https://github.com/undergraph-dev/undergraph/issues"
  },
  "scripts": {
    "clean": "rimraf ./.next",
    "dev": "concurrently \"npm run nextDev\" \"npm run relay-watch\" \"npm run browser\"",
    "wundergraph": "wunderctl up",
    "generate": "wunderctl generate",
    "browser": "wait-on \"http-get://localhost:3003\" && wait-on \"http-get://localhost:9991\" && open-cli http://localhost:3003",
    "build": "pnpm generate && next build && pnpm check",
    "build:static": "pnpm generate && next build && next export && pnpm check",
    "check": "tsc --noEmit",
    "nextDev": "next dev --port 3003",
    "start": "next start --port 3003",
    "relay": "relay-compiler",
    "relay-watch": "relay-compiler --watch"
  },
  "dependencies": {
    "@graphql-yoga/node": "^2.13.13",
    "@tanstack/react-query": "^4.20.4",
    "@undergraph-dev/nextjs": "workspace:*",
    "@undergraph-dev/react-query": "workspace:*",
    "@undergraph-dev/react-relay": "workspace:*",
    "@undergraph-dev/sdk": "workspace:*",
    "@undergraph-dev/swr": "workspace:*",
    "next": "^14.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-relay": "^15.0.0",
    "relay-runtime": "^15.0.0",
    "stripe": "^11.12.0",
    "swr": "^2.2.0",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@types/node": "^18.16.0",
    "@types/react": "^18.0.7",
    "@types/react-relay": "^14.1.3",
    "@types/relay-runtime": "^14.1.10",
    "babel-plugin-relay": "^15.0.0",
    "concurrently": "^6.0.0",
    "graphql": "^16.6.0",
    "open-cli": "^7.0.1",
    "relay-compiler": "^15.0.0",
    "typescript": "^5.1.6",
    "wait-on": "^6.0.0"
  },
  "sideEffects": false,
  "relay": {
    "src": "./",
    "language": "typescript",
    "schema": "./.wundergraph/generated/wundergraph.schema.graphql",
    "artifactDirectory": "./__generated__",
    "excludes": [
      "**/node_modules/**",
      "**/__generated__/**",
      "**/.next/**",
      "**/.wundergraph/**"
    ],
    "persistConfig": {
      "file": "./.wundergraph/operations/relay/persisted.json"
    }
  }
}
